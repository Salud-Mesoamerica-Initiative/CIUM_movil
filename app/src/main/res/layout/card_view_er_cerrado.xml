<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lvertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:clickable="true"
    android:showDividers="end">

            <TextView
                android:id="@+id/tipo_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="12dp"
                android:layout_below="@+id/nombre_criterio"
                android:paddingTop="0dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/nombre_lugar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="TITULO_LUGAR_VERIFICACION"
                android:gravity="center_vertical"
                android:textColor="@color/PrimaryColor"
                android:textSize="15dp"
                android:paddingTop="5dp"
                android:textStyle="bold"
                android:paddingLeft="5dp" />

            <TextView
                android:id="@+id/nombre_criterio"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="TITULO_CRITERIO"
                android:gravity="center_vertical"
                android:textColor="@android:color/black"
                android:textSize="12dp"
                android:paddingTop="5dp"
                android:paddingLeft="5dp" />

    <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground"
        android:visibility="gone">

                <RadioButton
                    android:id="@+id/si"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Si"
                    android:clickable="true"/>

                <RadioButton
                    android:id="@+id/no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:clickable="true"/>

                <RadioButton
                    android:id="@+id/na"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NA"
                    android:clickable="true"/>

    </RadioGroup>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="right">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonYes"
            android:src="@drawable/ic_check_black_24dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonNo"
            android:src="@drawable/ic_clear_black_24dp"
            android:layout_marginRight="10dp" />
    </LinearLayout>

</LinearLayout>

